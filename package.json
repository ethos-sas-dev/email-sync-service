{
  "name": "email-sync-service",
  "version": "1.0.0",
  "description": "Servicio independiente para sincronizaci√≥n de correos con Strapi",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=4096 dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "sync": "node --max-old-space-size=4096 -r ts-node/register src/scripts/syncEmails.ts",
    "gc-sync": "node --max-old-space-size=4096 --expose-gc -r ts-node/register src/scripts/syncEmails.ts"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.6.5",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/imap-simple": "^4.2.9",
    "@types/mailparser": "^3.4.4",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
} 